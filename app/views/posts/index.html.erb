<%= render 'shared/title', title: 'Post List Yay!!!'%>

<%#= views/posts/index.html.erb
%>
 <%logger.info(@post) %>
<% @posts.each do |post| %>
  <div class="row">
   <%#<button type="button" class="btn btn-link" href=new_post_path>Link</button>
   %>
    <div class="well col-md-6">
      <p>

        <h4><%= post.title %></h4>
      </p>
      <p>
        <%= post.content %>
      </p>
      <br>
      <span>
        <%= link_to "show this post", post_path(post)%>
      </span>
    </div>
  </div>
<% end %>